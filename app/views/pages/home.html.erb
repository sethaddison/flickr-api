<%= form_with url: '/home', method: :get, local: true do |f| %>
  <div class="input-group">
    <%= f.text_field :user_id, placeholder: "Enter a Flickr User ID", class: "form-control" %>
    <div class="input-group-append">
      <%= f.submit 'Search', class: "btn btn-primary" %>
    </div>
  </div>
<% end %>

<% if @photos %>
  <div class="card-columns mt-5">
    <% @photos.each do |photo| %>
      <div class="card">
        <img class="card-img-top" src=<%=Flickr.url(photo)%>>
      </div>
    <% end %>
  </div>
<% end %>
